<div class="container">
    <div class="row">
        <div class="profile-container">
            <div class="col" >
                <ul>
                    <li><h3 class="profile-name"><%= @user.name %></h3></li>
                    <li><h3 class="profile-introduction"><%= @user.introduction %></h3></li>
                    <li><%= attachment_image_tag @user, :profile_image , size:"30×30", format: 'jpeg', class:"img-circle pull-left profile-thumb", fallback: "no_image.jpg",  style: "width: 100px; height: 100px; margin-top: 20px;" %></li>
                    <li><%= render "relationships/follow_button", user: @user  %></li>
                    <% if @user.id == current_user.id %>
                        <li><%= link_to "編集", edit_user_path(@user) %></li>
                    <% end %>
                    
                </ul>
            </div>
        </div>
    </div>
</div>